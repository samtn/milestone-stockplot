  <!doctype html>
    <title>Closing price data for last month</title>
    <link rel=stylesheet type=text/css href='{{ url_for('static',filename='style_lulu.css')}}'>
    
    <script type="text/javascript" src="https://cdn.pydata.org/bokeh/release/bokeh-0.11.1.min.js"></script>
    
    <div class=page>
      <h1>Stock price tracker</h1>
      <div class=metanav>
        
        <h4>                                                                                    
          Please enter a valid stock name                                         
        </h4>
        
        <form id='answerform' method='post' action='resultpage' >
          <p>
	  Name: <input type='text' name='stock' />
          </p>
	  <p>
    	Opening price <input type='radio' name='feature' value='Open' />
      	</p>
	Lowest price <input type='radio' name='feature' value='Low' />
        </p>
      	Highest price <input type='radio' name='feature' value='High' />
      	</p>
      	Closing price <input type='radio' name='feature' value='Close' />
      	</p>  
          <p>
    	<input type='submit' value='Plot' />
          </p>
        </form>
       </h4>
	<h2> {{ msg }} </h2> 
      </div>
    </div>
    </html>
